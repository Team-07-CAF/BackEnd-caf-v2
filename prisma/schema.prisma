generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  balance      Float         @default(0)
  transactions Transaction[]
}

model Transaction {
  id     Int      @id @default(autoincrement())
  amount Float
  type   String
  date   DateTime @default(now())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}
